@page "/purchase-requests/submit"
@using MediatR
@using Microsoft.AspNetCore.Components.Forms
@using SubmitPurchaseRequest.Application
@using Shared.Application
@inject IMediator Mediator
@inject NavigationManager Navigation

<PageTitle>購買申請の提出</PageTitle>

<h3>新規購買申請</h3>

@if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @_errorMessage
    </div>
}

@if (!string.IsNullOrEmpty(_successMessage))
{
    <div class="alert alert-success" role="alert">
        @_successMessage
    </div>
}

<EditForm Model="@_model" OnValidSubmit="@HandleSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label for="title" class="form-label">タイトル</label>
        <InputText id="title" class="form-control" @bind-Value="_model.Title" placeholder="購買申請のタイトルを入力" />
        <ValidationMessage For="@(() => _model.Title)" />
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">説明</label>
        <InputTextArea id="description" class="form-control" @bind-Value="_model.Description" rows="4" placeholder="購買申請の詳細を入力" />
        <ValidationMessage For="@(() => _model.Description)" />
    </div>

    <h4 class="mt-4">購入品目</h4>

    @for (int i = 0; i < _model.Items.Count; i++)
    {
        var index = i;
        var item = _model.Items[index];

        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">商品ID</label>
                        <InputText class="form-control" @bind-Value="item.ProductId" placeholder="商品IDを入力" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">商品名</label>
                        <InputText class="form-control" @bind-Value="item.ProductName" placeholder="商品名を入力" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">数量</label>
                        <InputNumber class="form-control" @bind-Value="item.Quantity" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">単価 (JPY)</label>
                        <InputNumber class="form-control" @bind-Value="item.UnitPrice" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">合計金額</label>
                        <div class="form-control-plaintext">
                            @((item.UnitPrice * item.Quantity).ToString("N2")) JPY
                        </div>
                    </div>
                </div>
                <button type="button" class="btn btn-danger btn-sm" @onclick="() => RemoveItem(index)">
                    品目を削除
                </button>
            </div>
        </div>
    }

    <button type="button" class="btn btn-secondary mb-3" @onclick="AddItem">
        品目を追加
    </button>

    <div class="mb-3">
        <strong>総額: </strong>@CalculateTotalAmount().ToString("N2") JPY
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary" disabled="@_isSubmitting">
            @if (_isSubmitting)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
            }
            提出
        </button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="Cancel">
            キャンセル
        </button>
    </div>
</EditForm>

@code {
    private PurchaseRequestSubmitModel _model = new();
    private bool _isSubmitting;
    private string? _errorMessage;
    private string? _successMessage;

    protected override void OnInitialized()
    {
        // Initialize with one empty item
        _model.Items.Add(new PurchaseRequestItemModel());
    }

    private void AddItem()
    {
        _model.Items.Add(new PurchaseRequestItemModel());
    }

    private void RemoveItem(int index)
    {
        if (_model.Items.Count > 1)
        {
            _model.Items.RemoveAt(index);
        }
    }

    private decimal CalculateTotalAmount()
    {
        return _model.Items.Sum(item => item.UnitPrice * item.Quantity);
    }

    private async Task HandleSubmit()
    {
        _isSubmitting = true;
        _errorMessage = null;
        _successMessage = null;

        try
        {
            var command = new SubmitPurchaseRequestCommand
            {
                Title = _model.Title,
                Description = _model.Description,
                Items = _model.Items.Select(item => new PurchaseRequestItemDto(
                    Guid.Parse(item.ProductId),
                    item.ProductName,
                    item.UnitPrice,
                    item.Quantity
                )).ToList()
            };

            var result = await Mediator.Send(command);

            if (result.IsSuccess)
            {
                _successMessage = $"購買申請が正常に提出されました。申請ID: {result.Value}";
                // Reset form
                _model = new PurchaseRequestSubmitModel();
                _model.Items.Add(new PurchaseRequestItemModel());

                // Navigate to detail page after 2 seconds
                await Task.Delay(2000);
                Navigation.NavigateTo($"/purchase-requests/{result.Value}");
            }
            else
            {
                _errorMessage = $"エラー: {result.Error}";
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"予期しないエラーが発生しました: {ex.Message}";
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/purchase-requests");
    }

    private class PurchaseRequestSubmitModel
    {
        public string Title { get; set; } = string.Empty;
        public string Description { get; set; } = string.Empty;
        public List<PurchaseRequestItemModel> Items { get; set; } = new();
    }

    private class PurchaseRequestItemModel
    {
        public string ProductId { get; set; } = string.Empty;
        public string ProductName { get; set; } = string.Empty;
        public decimal UnitPrice { get; set; }
        public int Quantity { get; set; } = 1;
    }
}
