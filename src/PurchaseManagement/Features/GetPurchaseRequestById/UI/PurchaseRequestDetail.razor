@page "/purchase-requests/{Id:guid}"
@using MediatR
@using GetPurchaseRequestById.Application
@using PurchaseManagement.Shared.Domain.PurchaseRequests.Boundaries
@using Shared.Application
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IMediator Mediator
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject IApprovalBoundary ApprovalBoundary

<PageTitle>購買申請詳細</PageTitle>

@if (_isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">読み込み中...</span>
        </div>
    </div>
}
else if (!string.IsNullOrEmpty(_errorMessage))
{
    <div class="alert alert-danger" role="alert">
        @_errorMessage
    </div>
    <button class="btn btn-secondary" @onclick="@(() => Navigation.NavigateTo("/purchase-requests"))">
        一覧に戻る
    </button>
}
else if (_purchaseRequest == null)
{
    <div class="alert alert-warning" role="alert">
        指定された購買申請が見つかりませんでした。
    </div>
    <button class="btn btn-secondary" @onclick="@(() => Navigation.NavigateTo("/purchase-requests"))">
        一覧に戻る
    </button>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>購買申請詳細</h3>
        <button class="btn btn-secondary" @onclick="@(() => Navigation.NavigateTo("/purchase-requests"))">
            一覧に戻る
        </button>
    </div>

    @if (!string.IsNullOrEmpty(_actionMessage))
    {
        <div class="alert @(_actionSuccess ? "alert-success" : "alert-danger")" role="alert">
            @_actionMessage
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5>基本情報</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>申請番号:</strong> @_purchaseRequest.RequestNumber
                </div>
                <div class="col-md-6 mb-3">
                    <strong>ステータス:</strong>
                    <span class="badge @GetStatusBadgeClass(_purchaseRequest.Status)">
                        @_purchaseRequest.StatusName
                    </span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <strong>申請者:</strong> @_purchaseRequest.RequesterName
                </div>
                <div class="col-md-6 mb-3">
                    <strong>作成日時:</strong> @_purchaseRequest.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-3">
                    <strong>タイトル:</strong> @_purchaseRequest.Title
                </div>
            </div>
            <div class="row">
                <div class="col-12 mb-3">
                    <strong>説明:</strong>
                    <p class="mt-2">@_purchaseRequest.Description</p>
                </div>
            </div>
            @if (_purchaseRequest.SubmittedAt.HasValue)
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <strong>提出日時:</strong> @_purchaseRequest.SubmittedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                    </div>
                </div>
            }
            @if (_purchaseRequest.ApprovedAt.HasValue)
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <strong>承認日時:</strong> @_purchaseRequest.ApprovedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                    </div>
                </div>
            }
            @if (_purchaseRequest.RejectedAt.HasValue)
            {
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <strong>却下日時:</strong> @_purchaseRequest.RejectedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h5>購入品目</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価</th>
                        <th>数量</th>
                        <th>金額</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in _purchaseRequest.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.UnitPrice.ToString("N2") @item.Currency</td>
                            <td>@item.Quantity</td>
                            <td>@item.Amount.ToString("N2") @item.Currency</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">合計:</th>
                        <th>@_purchaseRequest.TotalAmount.ToString("N2") @_purchaseRequest.Currency</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    @if (_purchaseRequest.ApprovalSteps.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>承認フロー</h5>
            </div>
            <div class="card-body">
                @foreach (var step in _purchaseRequest.ApprovalSteps.OrderBy(s => s.StepNumber))
                {
                    <div class="card mb-3 @(step.Status == 0 ? "border-warning" : step.Status == 1 ? "border-success" : "border-danger")">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <strong>第@(step.StepNumber)承認者:</strong> @step.ApproverName (@step.ApproverRole)
                                </div>
                                <div class="col-md-6">
                                    <strong>ステータス:</strong>
                                    <span class="badge @GetApprovalStepStatusBadgeClass(step.Status)">
                                        @step.StatusName
                                    </span>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(step.Comment))
                            {
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <strong>コメント:</strong> @step.Comment
                                    </div>
                                </div>
                            }
                            @if (step.ApprovedAt.HasValue)
                            {
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small class="text-muted">承認日時: @step.ApprovedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</small>
                                    </div>
                                </div>
                            }
                            @if (step.RejectedAt.HasValue)
                            {
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <small class="text-muted">却下日時: @step.RejectedAt.Value.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @* Intent駆動のアクションボタン（業務意図ベース） *@
    @if (_intentContext != null && _intentContext.HasAvailableIntents)
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>実行可能なアクション</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label for="actionComment" class="form-label">コメント</label>
                    <textarea id="actionComment" class="form-control" @bind="_actionComment" rows="3" placeholder="コメントを入力してください..."></textarea>
                </div>

                <div class="d-flex gap-2 flex-wrap">
                    @foreach (var intent in _intentContext.AvailableIntents.Where(i => i.IsEnabled))
                    {
                        var metadata = intent.Metadata;
                        <button class="btn @metadata.ButtonClass"
                                @onclick="() => HandleIntent(intent.Intent)"
                                disabled="@_isProcessing"
                                title="@metadata.Description">
                            @if (_isProcessing)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            <i class="bi @metadata.Icon me-1"></i>
                            @metadata.Label
                        </button>
                    }
                </div>

                @* 業務意図ごとの補足説明 *@
                <div class="mt-3">
                    <small class="text-muted">
                        <strong>ヒント:</strong>
                        @foreach (var intent in _intentContext.AvailableIntents.Where(i => i.IsEnabled))
                        {
                            <div class="mt-1">
                                <span class="badge @intent.Metadata.ButtonClass me-1">@intent.Metadata.Label</span>
                                @intent.Metadata.Description
                            </div>
                        }
                    </small>
                </div>
            </div>
        </div>
    }
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private PurchaseRequestDetailDto? _purchaseRequest;
    private ApprovalEligibility? _approvalEligibility;
    private IntentContext? _intentContext; // Intent-Command分離パターン
    private bool _isLoading = true;
    private string? _errorMessage;
    private string? _actionMessage;
    private bool _actionSuccess;
    private bool _isProcessing;

    private string _actionComment = string.Empty; // 統一されたコメント欄

    // SECURITY: Current user ID for authorization checks
    private Guid _currentUserId = Guid.Empty;

    protected override async Task OnInitializedAsync()
    {
        // Get current user ID from authentication state
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity?.IsAuthenticated == true)
        {
            var userIdClaim = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            _currentUserId = Guid.TryParse(userIdClaim, out var userId) ? userId : Guid.Empty;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        await LoadPurchaseRequest();
    }

    private async Task LoadPurchaseRequest()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var query = new GetPurchaseRequestByIdQuery { Id = Id };
            var result = await Mediator.Send(query);

            if (result.IsSuccess)
            {
                _purchaseRequest = result.Value;

                // バウンダリー経由で承認資格とIntent一覧を取得（Intent-Command分離パターン）
                if (_purchaseRequest != null)
                {
                    _approvalEligibility = ApprovalBoundary.CheckEligibilityFromDto(
                        _purchaseRequest,
                        _currentUserId
                    );

                    // UI層は業務意図（Intent）のみを扱う
                    _intentContext = ApprovalBoundary.GetIntentContextFromDto(
                        _purchaseRequest,
                        _currentUserId
                    );
                }
            }
            else
            {
                _errorMessage = result.Error;
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"予期しないエラーが発生しました: {ex.Message}";
        }
        finally
        {
            _isLoading = false;
        }
    }

    /// <summary>
    /// Intent駆動のアクション処理（Intent→Commandマッピング）
    ///
    /// 【Intent-Command分離パターン】
    /// UIは業務意図（Intent）を扱い、バウンダリーがCommandに変換する
    /// - UIは「どのコマンドか」を知らない
    /// - UIは「何をしたいか」（業務意図）だけを伝える
    /// - ドメイン層が技術詳細（Command）を決定する
    /// </summary>
    private async Task HandleIntent(ApprovalIntent intent)
    {
        _isProcessing = true;
        _actionMessage = null;

        try
        {
            // ドメイン層（バウンダリー）がIntentをCommandに変換
            var command = ApprovalBoundary.CreateCommandFromIntent(
                intent,
                Id,
                _currentUserId,
                _actionComment
            );

            // MediatRコマンドを実行（型安全性のため dynamic を使用）
            dynamic result = await Mediator.Send((dynamic)command);

            if (result.IsSuccess)
            {
                var metadata = IntentMetadata.FromIntent(intent);
                _actionMessage = $"{metadata.Label}を実行しました。";
                _actionSuccess = true;
                _actionComment = string.Empty;
                await LoadPurchaseRequest();
            }
            else
            {
                _actionMessage = $"エラー: {result.Error}";
                _actionSuccess = false;
            }
        }
        catch (Exception ex)
        {
            _actionMessage = $"予期しないエラーが発生しました: {ex.Message}";
            _actionSuccess = false;
        }
        finally
        {
            _isProcessing = false;
        }
    }

    /// <summary>
    /// 承認可否の判定（バウンダリー経由）
    ///
    /// REFACTORED: UI層のロジックをドメイン層のバウンダリーに委譲
    /// - ドメインロジックをUI層に置かない（バウンダリーパターン）
    /// - セキュリティクリティカルな判定はドメイン層で一元管理
    /// </summary>
    private bool CanApprove()
    {
        return _approvalEligibility?.CanApprove ?? false;
    }

    /// <summary>
    /// 却下可否の判定（バウンダリー経由）
    ///
    /// REFACTORED: UI層のロジックをドメイン層のバウンダリーに委譲
    /// - ドメインロジックをUI層に置かない（バウンダリーパターン）
    /// - セキュリティクリティカルな判定はドメイン層で一元管理
    /// </summary>
    private bool CanReject()
    {
        return _approvalEligibility?.CanReject ?? false;
    }

    /// <summary>
    /// ステータスバッジクラス取得（バウンダリー経由）
    ///
    /// REFACTORED: ステータス表示ロジックをドメイン層のバウンダリーに委譲
    /// - ステータスの意味論（色、重要度）はドメイン知識
    /// - UI層はバウンダリーが返す情報を表示するだけ
    /// </summary>
    private static string GetStatusBadgeClass(int status)
    {
        var statusEnum = (PurchaseManagement.Shared.Domain.PurchaseRequests.PurchaseRequestStatus)status;
        var displayInfo = StatusDisplayInfo.FromStatus(statusEnum);
        return displayInfo.BadgeColorClass;
    }

    private static string GetApprovalStepStatusBadgeClass(int status)
    {
        return status switch
        {
            0 => "bg-warning", // 保留中
            1 => "bg-success", // 承認済み
            2 => "bg-danger", // 却下
            _ => "bg-light"
        };
    }
}
