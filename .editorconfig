# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# Code files
[*.{cs,csx,razor,cshtml,vb,vbx}]
charset = utf-8-bom
indent_style = space
indent_size = 4
end_of_line = lf

# JSON files
[*.json]
charset = utf-8
indent_style = space
indent_size = 2

# XML project files
[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
charset = utf-8
indent_style = space
indent_size = 2

# XML config files
[*.{props,targets,ruleset,config,nuspec,resx,vsixmanifest,vsct}]
charset = utf-8
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
charset = utf-8
indent_style = space
indent_size = 2

# Markdown files
[*.md]
charset = utf-8
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
charset = utf-8
end_of_line = lf

# PowerShell scripts
[*.ps1]
charset = utf-8-bom
